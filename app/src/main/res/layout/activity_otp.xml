    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


                <android.support.v7.widget.CardView
                    android:id="@+id/first"
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="-50dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/border"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="350dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="30dp"
                            android:gravity="center"
                            android:text="Enter 6 Digit OTP sent via SMS on your Phone"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="350dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/textView1"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="One Time Password "
                            android:textColor="#FFdd1f8c"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.poovam.pinedittextfield.PinField
                            android:id="@+id/txt_pin_entry"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:cursorVisible="true"
                            android:digits="1234567890"
                            android:gravity="top"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textIsSelectable="false"
                            app:pinAnimationType="fromBottom"
                            app:pinBackgroundDrawable="@drawable/dotted" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="185dp"
                        android:layout_marginTop="170dp"
                        android:text="Resend OTP" />

                    <Button
                        android:id="@+id/blueBtn"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="200dp"
                        android:background="@drawable/bluebtn"
                        android:text="VERIFY"
                        android:textColor="#FDFEFE"
                        android:textStyle="bold" />


                </android.support.v7.widget.CardView>
    </RelativeLayout>


        </LinearLayout>