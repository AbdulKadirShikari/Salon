<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="#c7006e"
      android:id="@+id/relativeback_id">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageviewbacl_id"
        android:src="@drawable/back"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textpackage_id"
        android:text="Package"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/imageviewbacl_id"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:textSize="20dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageviewfilter_id"
        android:src="@drawable/filter"
        android:layout_toRightOf="@+id/textpackage_id"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="120dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageviewcart_id"
        android:src="@drawable/cart"
        android:layout_toRightOf="@+id/imageviewfilter_id"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="25dp"
        />
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:id="@+id/relativeimage_id"
     >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageviewfirst_id"
        android:layout_alignParentTop="true"
        android:src="@drawable/first"
        android:scaleType="fitXY"/>
  </RelativeLayout>
  

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
   
    <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="VALENTINE'S SPECIAL"
          android:textColor="#ffff"
          android:layout_marginTop="50dp"
          android:layout_marginLeft="30dp"/>
    
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="13dp"
          android:text="Sara-Gold Facial(improved gold radiance with mould mask)"
          android:textColor="#ffff"
          android:layout_marginTop="70dp"
          android:layout_marginLeft="30dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Basic-Manicure"
          android:textSize="13dp"
          android:textColor="#ffff"
          android:layout_marginTop="85dp"
          android:layout_marginLeft="30dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Basic-Padicure"
          android:textSize="13dp"
          android:textColor="#ffff"
          android:layout_marginTop="100dp"
          android:layout_marginLeft="30dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Theading-Eyebrows and Upper Lips"
          android:textSize="13dp"
          android:textColor="#ffff"
          android:layout_marginTop="115dp"
          android:layout_marginLeft="30dp"/>
  </RelativeLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/relativeimagegradi_id"
      android:orientation="horizontal"
      android:weightSum="2"
      android:layout_below="@+id/relativeimage_id">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="PARLOR NAME"
        android:textColor="#1cbde1"
        android:layout_marginVertical="15dp"
        android:textAlignment="center"
        android:textAllCaps="false"

        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/llAddCartId"
        android:background="@drawable/gradient_blue_btn">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="ADD TO CART"
          android:textSize="@dimen/_10sdp"
          android:textColor="#fff"
          android:textAlignment="center"
          android:textAllCaps="false"



          android:textStyle="bold"/>
    </LinearLayout>
  </LinearLayout>
  </RelativeLayout>
 </LinearLayout>