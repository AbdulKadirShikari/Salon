<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/signuptoprelative_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Signupimageicon_id"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/signupskip_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_12sdp"
            android:gravity="end"
            android:text="Skip"
            android:textColor="#FFb61d78"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signuppage_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signuptoprelative_id">

        <ImageView
            android:id="@+id/signupnameimage_id"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:src="@drawable/name" />

        <EditText
            android:id="@+id/signupname_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_70sdp"
            android:layout_toRightOf="@+id/signupnameimage_id"
            android:hint="Name"
            android:inputType="number"
            android:paddingTop="@dimen/_14sdp"
            android:textAlignment="center"
            android:textColor="#fff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signuprelativeemail_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signuppage_id">

        <ImageView
            android:id="@+id/signupemailimage_id"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:src="@drawable/mail" />

        <EditText
            android:id="@+id/signupemail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_70sdp"
            android:layout_toRightOf="@+id/signupemailimage_id"
            android:hint="Email"
            android:inputType="number"
            android:paddingTop="@dimen/_14sdp"
            android:textAlignment="center"
            android:textColor="#fff" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signuprelativemobile_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signuprelativeemail_id">

        <ImageView
            android:id="@+id/signupmobileimage_id"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:src="@drawable/phone" />

        <EditText
            android:id="@+id/signupmobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_70sdp"
            android:layout_toRightOf="@+id/signupmobileimage_id"
            android:hint="Mobile No"
            android:inputType="number"
            android:paddingTop="@dimen/_14sdp"
            android:textAlignment="center"
            android:textColor="#fff" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signuprelativereferral_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signuprelativemobile_id">

        <ImageView
            android:id="@+id/signupreferralimage_id"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:src="@mipmap/referral_code_signup" />

        <EditText
            android:id="@+id/signupreferral_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_70sdp"
            android:layout_toRightOf="@+id/signupreferralimage_id"
            android:hint="Referral Code"
            android:inputType="number"
            android:paddingTop="@dimen/_14sdp"
            android:textAlignment="center"
            android:textColor="#fff" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signbutton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signuprelativereferral_id"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/_40sdp">

        <Button
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bluebtn"
            android:text="SIGN UP"
            android:id="@+id/btnSignUpId"
            android:textColor="#FFF"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>