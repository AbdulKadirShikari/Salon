<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolbarId"
      >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="horizontal"/>

            <ImageView
                android:layout_width="34dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toolheaderId"
                android:text="Appointment History"
                android:layout_marginLeft="25dp"
                android:textSize="21dp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="18dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/searchiconId"
                android:layout_marginTop="5dp"

                android:layout_marginLeft="59dp" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/toolbarId"
        android:id="@+id/recyclerview"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="580dp" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:id="@+id/layoutId"
        android:padding="6dp"
        android:weightSum="4"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="1dp"
            android:src="@drawable/home"

            android:id="@+id/home"
            />
            <TextView
                android:id="@+id/homeImage_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#c7006e"
                android:layout_marginTop="2dp"

                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/offerimgId"
            android:layout_width="70dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="1dp"
            android:src="@drawable/offer"

            />
            <TextView
                android:id="@+id/offerimageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer"
                android:layout_marginTop="2dp"

                android:textColor="#c7006e"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/favimgId"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="1dp"
            android:src="@drawable/favirate"


            />
            <TextView
                android:id="@+id/faverateImageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faverate"
                android:layout_marginTop="1dp"

                android:textColor="#c7006e"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/userId"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="1dp"



            />
            <TextView
                android:id="@+id/userImageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:layout_marginTop="1dp"

                android:textColor="#c7006e"
                android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
